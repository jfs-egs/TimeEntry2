<resources>

    <!-- Base application theme. -->
    <style name="JFSAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFee00</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerStyle">@style/jfsspinnerstyle</item>
        <item name="android:spinnerItemStyle">@style/jfsspinneritemstyle</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/JFSActionBarStyle</item>
        <item name = "actionBarStyle">@style/JFSActionBarStyle</item>
    </style>                                                <!-- *** AppTheme SET HERE MUST MATCH Theme IN AndroidManifest.xml ***-->

    <!--ADD BAR AT TOP OF EACH SCREEN -->
<!--    <item name="android:windowActionBar">false</item> -->       <!--THIS HAS NO EFFECT; DEFAULT ACTION BAR APPEARS -->
<!--    <item name="android:windowActionBar">false</item>  -->      <!--THIS HAS NO EFFECT; DEFAULT ACTION BAR APPEARS -->
<!--    <item name="windowNoTitle">true</item> -->                  <!--THIS REMOVES ACTIONBAR, BUT DOES NOT ALLOW CUSTOM REPLACEMENT -->
<!--    <item name="windowActionBar">false</item>  -->              <!-- ALONE, THIS CRASHES -->

   <!-- <item name="android:windowNoTitle">true</item>
    <item name="windowNoTitle">true</item> -->

    <style name="jfsspinnerstyle" parent="android:Widget.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="jfsspinneritemstyle" parent="android:Widget.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--STYLES FOR ACTION BAR BELOW -->
    <style name="JFSActionBarStyle">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="JFSActionBarTitleStyle" parent="@style/JFSActionBarStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFE4C4</item>
        <item name="android:textSize">22dp</item>
    </style>                        <!-- ITEMS SET IN THIS STYLE CAN BE OVERRIDDEN IN activity_start.xml "app:" SETTINGS FOR TOOLBAR. -->

    <!--STYLE FOR TEXTVIEW USED IN HISTORY TABLE -->
    <style name="JFSrowtvstyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="rowselectedstyle">
        <item name="android:textStyle">italic</item>
        <item name="android:background">#f5a493</item>
    </style>

    <!--STYLE FOR BUTTONS ON ENTER PAGE -->
   <style name="btnstyle1">
       <item name="android:background">@color/jfsbtncolor</item>
       <item name="android:textSize">20dp</item>
       <item name="android:textColor">#000000</item>
       <item name="android:paddingLeft">10dp</item>
       <item name="android:paddingRight">10dp</item>
   </style>

</resources>
